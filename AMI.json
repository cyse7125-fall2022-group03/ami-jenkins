{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "us-east-1",
        "source_ami": "ami-08c40ec9ead489470",
        "ssh_username": "ubuntu",
        "security_group": "",
        "subnetid": "",
        "member1_acc_id":""

    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "security_group_id": "{{ user `security_group` }}", 
            "subnet_id": "{{ user `subnetid` }}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "ubuntu",
            "ami_users": "{{user `member1_acc_id`}}",
            "ami_name": "csye7125_{{timestamp}}",
            "ami_description": "Amazon Ubuntu Jenkins AMI for CSYE 7125"    
        }
    ],
    "provisioners": [
        {
					
            "type": "shell",
            "inline": [
                "sudo apt update",
				"curl -fsSL https://pkg.jenkins.io/debian/jenkins.io.key | sudo tee /usr/share/keyrings/jenkins-keyring.asc",
                "echo deb [signed-by=/usr/share/keyrings/jenkins-keyring.asc]  https://pkg.jenkins.io/debian binary/ | sudo tee /etc/apt/sources.list.d/jenkins.list",
                "sudo apt-get update",
                "sudo apt-get install openjdk-17-jre -y",
                "sudo apt-get update",
                "echo $JAVA_HOME",
                "java --version",
                "echo $PATH",
                "curl -O https://dlcdn.apache.org/maven/maven-3/3.8.6/binaries/apache-maven-3.8.6-bin.tar.gz",
                "sudo tar -xvf apache-maven-3.8.6-bin.tar.gz",
                "sudo mv apache-maven-3.8.6 /opt/maven",
                "export M2_HOME=/opt/maven",
                "export MAVEN_HOME=/opt/maven",
                "export PATH=${M2_HOME}/bin:${PATH}",
                "sudo apt-get update",
                "mvn --version",
                "sudo apt-get install jenkins -y",
                "sudo apt install nginx -y",
                "sudo apt install certbot python3-certbot-nginx -y",
                "wget https://get.helm.sh/helm-v3.9.3-linux-amd64.tar.gz",
                "tar xvf helm-v3.9.3-linux-amd64.tar.gz",
                "sudo mv linux-amd64/helm /usr/local/bin",
                "rm helm-v3.9.3-linux-amd64.tar.gz",
                "rm -rf linux-amd64",
                "sudo apt-get update",
                "helm version",
                "sleep 10",
                "sudo apt-get update",
                "curl -fsSL https://deb.nodesource.com/setup_16.x | sudo -E bash -",
                "sudo apt-get update",
                "sudo apt-get install -y nodejs",
                "sleep 10",
                "sudo apt-get update",
                "sudo npm install -g npm@9.1.1",
                "sleep 10",
                "sudo apt-get update",
                "sleep 10",
                "sudo apt-get update",
                "ls -al",
                "sleep 10",
                "sudo apt-get update",
                "node -v",
                "npm -v",
                "sleep 10",
                "curl -L https://github.com/jenkins-zh/jenkins-cli/releases/latest/download/jcli-linux-amd64.tar.gz|tar xzv",
                "sudo mv jcli /usr/local/bin/"
            ]		
        }
    ]
}
