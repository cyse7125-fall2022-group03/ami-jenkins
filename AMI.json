{
    "variables": {
        "aws_access_key": "${{ secrets.AWS_ACCESS_KEY_ID_ROOT }}",
        "aws_secret_key": "${{ secrets.AWS_SECRET_ACCESS_KEY_ROOT }}",
        "aws_region": "us-east-1",
        "source_ami": "ami-08c40ec9ead489470",
        "ssh_username": "ubuntu"

    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "ubuntu",
            "ami_name": "csye7125_{{timestamp}}",
           
            "ami_description": "Amazon Ubantu Jenkins AMI for CSYE 7125"
                     
        }
    ],
    "provisioners": [
        {
					
            "type": "shell",
            "inline": [
                "cd /etc/apt",  
                "sudo cp trusted.gpg trusted.gpg.d",
                "sudo apt update",
				"wget -q -O - https://pkg.jenkins.io/debian-stable/jenkins.io.key | sudo apt-key add -",
                "sudo sh -c 'echo deb http://pkg.jenkins.io/debian-stable binary/ > /etc/apt/sources.list.d/jenkins.list'",
                "sudo apt update"
                

		
            ]		
        }
    ]
}
