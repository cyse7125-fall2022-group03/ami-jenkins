{
    "variables": {
        "aws_access_key": "${{ secrets.AWS_ACCESS_KEY_ID_ROOT }}",
        "aws_secret_key": "${{ secrets.AWS_SECRET_ACCESS_KEY_ROOT }}",
        "aws_region": "us-east-1",
        "source_ami": "ami-08c40ec9ead489470",
        "ssh_username": "ubuntu"

    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "ubuntu",
            "ami_name": "csye7125_{{timestamp}}",
           
            "ami_description": "Amazon Ubantu Jenkins AMI for CSYE 7125"
                     
        }
    ],
    "provisioners": [
        {
					
            "type": "shell",
            "inline": [
				"sudo yum -y update",
                "sudo yum install -y java-1.8.0-openjdk.x86_64",
				"sudo yum install -y maven",
                "java -version",
				"cd /tmp",
				"sudo wget https://dlcdn.apache.org/maven/maven-3/3.8.4/binaries/apache-maven-3.8.4-bin.tar.gz",
				"sudo tar xf /tmp/apache-maven-*.tar.gz -C /opt",
				"sudo ln -s /opt/apache-maven-3.8.4 /opt/maven",
				"cd",
                "export JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk/",
				"PATH=$JAVA_HOME/bin:$PATH",
                "export M2_HOME=/opt/maven",
                "export MAVEN_HOME=/opt/maven",
                "export PATH=${M2_HOME}/bin:${PATH}",
                "mvn -version",
                "curl -fsSL https://pkg.jenkins.io/debian-stable/jenkins.io.key | sudo tee \\ /usr/share/keyrings/jenkins-keyring asc > /dev/null",
                "echo deb [signed-by=/usr/share/keyrings/jenkins-keyring.asc] \\ https://pkg.jenkins.io/debian-stable binary/ | sudo tee \\ /etc/apt/sources.list.d/jenkins.list > /dev/null",
                "sudo yum -y update"

		
            ]		
        }
    ]
}
